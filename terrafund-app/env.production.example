# Production Environment Variables
# Copy this file to .env.production for production deployment

# Application Environment
NEXT_PUBLIC_APP_ENV=production

# Application URL (replace with your actual domain)
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Google AdSense (add after approval)
# Get this from https://www.google.com/adsense/
# NEXT_PUBLIC_GOOGLE_ADSENSE_ID=ca-pub-4033311126187552

# Alternative Ad Networks (optional)
# NEXT_PUBLIC_MEDIA_NET_ID=your_media_net_id
# NEXT_PUBLIC_PROPELLER_ADS_ID=your_propeller_id

# Firebase Configuration (add when setting up database)
# Get these from Firebase Console: https://console.firebase.google.com/
# NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
# NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
# NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
# NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-app.appspot.com
# NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
# NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# One Tree Planted API (add when partnership is established)
# Contact: https://onetreeplanted.org/pages/business-contact
# ONE_TREE_PLANTED_API_KEY=your_api_key_here
# ONE_TREE_PLANTED_WEBHOOK_SECRET=your_webhook_secret

# Analytics (optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking (optional)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Admin Access (for admin dashboard)
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD_HASH=your_bcrypt_hash_here

# Rate Limiting (for API routes)
# RATE_LIMIT_MAX_REQUESTS=100
# RATE_LIMIT_WINDOW_MS=900000

# Tree Pricing Settings (override defaults if needed)
# TREE_PRICE_CACHE_TTL=3600
# DEFAULT_TREE_COST_USD=0.50

# Feature Flags
# ENABLE_REAL_ADS=false
# ENABLE_USER_AUTH=false  
# ENABLE_TREE_PURCHASING=false
